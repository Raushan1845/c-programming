#include <iostream>
#include <cmath>
using namespace std;
int main() {
    int n;
cout<<"enter the number";
    cin>>n;
//taking the value of n//
    while(n>9){ //while loop
        if(n%2==0){
            n = floor((n-2)/2);
        }
        else {
            n= floor(n/2);
        }
    }
    cout<<"the single digit value is";
    cout<<n;
    

    return 0;
}
